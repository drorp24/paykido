	    $('#paykido.modal').append($('#returnedMessage'))
		$('#returnedMessage .modal-header h3').html('Error')
		$('.wrong_params').show();	
		$('#returnedMessage').show()
	    $('#paykido.modal').modal('show')
	<% end %>
	

