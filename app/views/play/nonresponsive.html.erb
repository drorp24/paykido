		PP_TransactionID=12345&
		hash=7dfe156303ff34a0546d1de774d440d5&
		merchant_url=<%= request.protocol + Paykido::Application.config.hostname + '/play' %>&
		referrer=<%= request.protocol + Paykido::Application.config.hostname %>/play">
