	<%= radio_button_tag("amountdesc", "310 Farm Cash", false, :class=> "option") %>
	<%= radio_button_tag("amountdesc", "240 Farm Cash", false, :class=> "option") %>
	<%= radio_button_tag("amountdesc", "115 Farm Cash", false, :class=> "option") %>
	<%= radio_button_tag("amountdesc", "55 Farm Cash", false, :class=> "option") %>
	<%= radio_button_tag("amountdesc", "25 Farm Cash", false, :class=> "option") %>
<% end %>

<img src="http://www.go-arca.com/images/arca button.png" id="arca" border=0 alt="arca"/>

<script type="text/javascript">

$(document).ready(function() {
	
	$('#arca').click(function() {
		var url = 'http://localhost/consumer/login?' + $('form').serialize();
		alert('url is: ' + url);
		$.facebox(url);		
	})
});

window.onload = function() {
    
	set_scroll();
	<% if @activity == "buy" %>	
		$.facebox({ ajax:  'http://localhost/consumer/login?sn=ACME&userid=131827&amount=6.99&amountdesc=310%20Farm%20Cash&hash=df659d502af5151a2edd18e2ebb50ba3&xdurl=http:%2F%2Flocalhost%2Fxd.html'});
	<% end %>

}

// if query string in URL contains scroll=nnn, then scroll position will be restored
function set_scroll(){
    // get query string parameter with "?"
    var search = window.location.search;
    // if query string exists
    if (search){
        // find scroll parameter in query string
        var matches = /scroll=(\d+)/.exec(search);
        // jump to the scroll position if scroll parameter exists
        if (matches) window.scrollTo(0, matches[1]);
    }
}

</script>


