<div class="row hm_container">

	<%= image_tag "/home/img/ys_kid_tp2.png", :id => "yellowshirt_kid" %>
	
	<div class="span9 offset1">
		<%= render "payers/shared/hero" %>
	</div>
		
	<div id="form_box" class="span3 well ">

		<h1>Forgot your password?</h1>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f| %>

			<%= f.error_notification %>
			
			<div class="form-inputs">
				<%= f.input :email, :required => true, :hint => 'Email with instructions will be sent there' %>
			</div>
			
			<div class="form_bottom">
				<%= f.button :submit, "Reset password", :class => "btn-large" %>
				<%= render "payers/shared/links" %>
			</div>
			
		<% end %>

	</div>
	
</div>