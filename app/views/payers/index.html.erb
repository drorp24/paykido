<h1>Listing payers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Pay type</th>
    <th>Username</th>
    <th>Hashed password</th>
    <th>Salt</th>
    <th>Balance</th>
  </tr>

<% @payers.each do |payer| %>
  <tr>
    <td><%=h payer.name %></td>
    <td><%=h payer.email %></td>
    <td><%=h payer.pay_type %></td>
    <td><%=h payer.username %></td>
    <td><%=h payer.hashed_password %></td>
    <td><%=h payer.salt %></td>
    <td><%=h payer.balance %></td>
    <td><%= link_to 'Show', payer %></td>
    <td><%= link_to 'Edit', edit_payer_path(payer) %></td>
    <td><%= link_to 'Destroy', payer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New payer', new_payer_path %>