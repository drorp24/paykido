<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
   <%= stylesheet_link_tag  "service", :media => "all" %>
   <%= javascript_include_tag :defaults %>
</head>	
<body id="service">
  <div class="container">
	<span id="logo"><%=image_tag ("/images/logo.png") %></span>
	<span id="start_today"><%=image_tag ("/images/get_started_today.png")%></span><br>
	<span id="facebook">facebook</span>
	<span id="login">login</span>
	<span  id="register">register</span><br>
	<div id="banner">BANNER</div>
	<div id="main">
      <!-- START:flash -->
      <% if flash[:notice] -%>
        <div id="notice"><%= flash[:notice] %></div>
      <% end -%>
      <!-- END:flash -->

      <%= yield :layout %>
    </div>
  </div>
</body>
</html>
