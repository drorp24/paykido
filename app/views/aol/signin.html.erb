<% title "Welcome" %>

<% form_for :user, :url => { :action => :signin } do |form| %>
  <%= form.error_messages %>
	<ul class="rounded">
		<li><%= form.text_field :name, :placeholder => "user"%></li>
		<li><%= form.password_field :password, :placeholder => "password" %></li>
	</ul>
    <%= link_to "Sign In", nil, :class => "whiteButton submit" %>
<% end %>
