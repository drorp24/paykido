<h1>Listing purchases</h1>

<table>
  <tr>
    <th>Payer</th>
    <th>Retailer</th>
    <th>Product</th>
    <th>Amount</th>
    <th>Purchase date</th>
    <th>Billing date</th>
    <th>Billing by</th>
  </tr>

<% @purchases.each do |purchase| %>
  <tr>
    <td><%=h purchase.payer_id %></td>
    <td><%=h purchase.retailer_id %></td>
    <td><%=h purchase.product_id %></td>
    <td><%=h purchase.amount %></td>
    <td><%=h purchase.purchase_date %></td>
    <td><%=h purchase.billing_date %></td>
    <td><%=h purchase.billing_by %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New purchase', new_purchase_path %>