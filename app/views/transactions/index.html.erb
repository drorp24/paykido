<%= render 'primary_navigation' %>
<%= render 'consumer_navigation' %>

<section id="maincontainer">

	<%= render :partial => 'page_head', :locals => {:title => 'Purchase Transactions', :backPath => :back} %>
	
	<table>
		<tbody>
			<% @transactions.each do |transaction| %>
			  <tr>
			    <td><%= transaction.trx_type %></td>
			    <td><%= transaction.created_at %></td>
			    <td><%= link_to 'Details', payer_purchase_transaction_path(@payer, @purchase, transaction) %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>
	
	<br />

</section>

<%= render 'notifications' %>