<div id="new_rule" class="box rule_modal">
    <div class="box-header">
        <span class="icon16 new"></span>
        <h1>new rule</h1>
    </div>
  
    <div class="box-content">
        <div class="rule header"><%= t 'Rule Title', :action => action, :property => property %></div>
        <div class="rule property">
            <span class="property_name"><%= @retailer_name %></span>
            <span class="whitelist marked"></span>
        </div>
        <div class="rule instruction">
            <% if @payer.registered? %>
                <p>Click <strong>YES</strong> to have Paykido automatically approve purchases from <%= @retailer_name %></p>
                <p>Click <strong>NO</strong> to cancel and return</p>
            <% else %>
                </p>Sign-up if you like Paykido to enforce your rules.</p>
                <p>See <a href='#'>here</a> how Paykido protects your kids and budget.</p>            
            <% end %>
        </div>
        <div class="action_bar">
            <% if @payer.registered? %> 
                <a href='control/rule?ent=retailer&id=1&rule=whitelist' class= "blue button">Yes</a>
                <a href="#" class="close button">No</a>
            <% else %>
                <a href='control/signup' class= "blue button">Sign-up</a>
                <a href="#" class="close button">close</a>
            <% end %>
        </div>
    </div>
    
</div>
