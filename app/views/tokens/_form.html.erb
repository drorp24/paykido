
<%= simple_form_for(@token, :class => 'form-inline') do |f| %>
  <%= f.error_notification %>

	<p id="space_before_registration_form"></p>
  	<div class="form-inputs">
	    <%= f.input :FirstName, :label => "First Name", :autofocus => true %>
	    <%= f.input :LastName, :label => "Last Name" %>
	    <%= f.input :Phone %>
	    <%= f.input :Email %>
	</div>

	<div class="form-actions">
    	<%= f.button :submit, "Register, it's free!", :class => "btn-info" %>
  	</div>
<% end %>
