<%= simple_form_for(rule, :class => 'form-inline') do |f| %>
  <%= f.error_notification %>

  	<div class="form-inputs">
	    <%= f.input :value, :autofocus => true %>
	    <%= f.input :occurrence, :collection => ['first day', 'last day'] %>
	    <%= f.input :period, :collection => ['week', 'month'] %>
	</div>

	<div class="form-actions">
    	<%= f.button :submit %>
  	</div>
<% end %>
