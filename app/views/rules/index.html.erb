<% unless params[:_pjax] %>
	<%= render 'primary_navigation' %>
	<%= render 'consumer_navigation' %>

<section id="maincontainer">
	<div id="main" class="container_12">
<% end %>

	<%= render :partial => 'page_head', :locals => {:title => 'Account Rules'} %>
	
	<table>
		<thead>
			<tr>
				<td>Property</td>
				<td>Value</td>
				<td>Action</td>
				<td>Details</td>
			</tr>
		</thead>
		<tbody>
			<% @rules.each do |rule| %>
			  <tr>
			    <td><%= rule.property %></td>
			    <td><%= rule.value %></td>
			    <td><%= rule.action %></td>
			    <td><%= link_to 'Details', payer_rule_path(@payer, rule) %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>
	
	<br />
	<%= link_to 'Add a new rule', new_payer_rule_path(@payer) if @payer.registered? or !Paykido::Application.rules_require_registration %>

<% unless params[:_pjax] %>  
  </div>
</section>
<% end %>

<%= render 'notifications' %>