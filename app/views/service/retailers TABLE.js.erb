			<p class="inner_content_title">Retailers</p><br />
				<div id="content_left_shade_area">
				<% @retailers.each do |retailer|%>
				<div class="portlet">
				<div class="portlet-header"><%= retailer.name %></div>
				<div class="portlet-content">
				<div class="form_line">
					<span class="icon">
						<% if    retailer.status == "whitelisted" %>
							<%= image_tag "/images/fb_like_lit_small.png", :class => "like", :id => "like_lit_#{retailer.id}" %>
						<% else %>
							<%= image_tag "/images/fb_like_small.png", :class => "like", :id => "like_unlit_#{retailer.id}" %>
						<% end %>
					</span>	
					<% if retailer.logo %>
						<%= image_tag retailer.logo, :class => "logo" %>
					<% else %>
						<span class="middle"><%= retailer.name %></span>
					<% end %>
					<span class="icon">
						<% if    retailer.status == "blacklisted" %>
							<%= image_tag "/images/fb_dont_lit_small.png", :class => "like right_float", :id => "dislike_lit_#{retailer.id}" %>
						<% else %>
							<%= image_tag "/images/fb_dont_small.png", :class => "like right_float", :id => "dislike_unlit_#{retailer.id}" %>
						<% end %>
					</span>	
					</div>
				</div>								
				</div>
				<% end %>
				</div>






