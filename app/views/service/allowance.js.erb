$('#cheerful_message').fadeOut(1200); 
$('#balance').val(<%= @consumer.balance %>);
$('#budget').val(<%= @payer_rule.allowance %>);
$('#payer_rule_rollover_human_on').attr('checked', "<%= (@payer_rule.rollover?) ?"checked":""  %>")
$('#payer_rule_rollover_human_off').attr('checked', "<%= (@payer_rule.rollover?) ?"":"checked"  %>")
<% if @consumer.name.blank? %>
	$('#consumer_name_allowance').html("Consumer's allowance");
<% else %>
	$('#consumer_name_allowance').html("<%= @consumer.name %>");
<% end %>
